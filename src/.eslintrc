{
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],

  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "printWidth": 80,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "endOfLine": "lf",
        "no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],
        "no-unused-vars": ["warn"]  
      }
    ]
  }
}
